<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/linear_layout">

        <RelativeLayout
            android:id="@+id/RelativeLayout01"
            android:layout_width="fill_parent"
            android:layout_height="50dp">

                <TextView
                    android:id="@+id/P1Turn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/edosz"
                    android:text="@string/YourTurn"
                    android:textColor="@color/player1TvColor"
                    android:textSize="30dp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/GamePlayBack"
                    android:layout_width="83dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    app:srcCompat="@drawable/testbackbuttoniconsettings" />


        </RelativeLayout>

        <TextView
            android:id="@+id/P1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/edosz"
            android:text="00"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/P1text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/edosz"
            android:shadowColor="#D6d7d7"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text="@string/player1"
            android:textColor="@color/player1TvColor"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/MyImageview"
            android:layout_width="394dp"
            android:layout_height="450dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/P2text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/edosz"
            android:text="@string/player2"
            android:textColor="#FF0000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/P2Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/edosz"
            android:text="00"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/P2Turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/edosz"
            android:text="@string/YourTurn"
            android:textSize="30dp"
            android:textColor="#FF0000"
            android:visibility="invisible"/>

<!--what is this?-->
        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="571dp"
            android:layout_height="290dp"
            app:srcCompat="@drawable/final_menu_button" />

</RelativeLayout>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColord"
    tools:context=".SettingsActivity">

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="369dp"
        android:layout_height="89dp"
        android:background="#03A9F4"
        android:dropDownWidth="match_parent"
        android:entries="@array/languages"
        android:fontFamily="@font/edosz"
        android:popupBackground="#03A9F4"
        android:gravity="center_horizontal"
        android:soundEffectsEnabled="false"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton3"
        app:layout_constraintVertical_bias="0.163" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="185dp"
        android:layout_height="76dp"
        android:layout_marginBottom="18dp"
        android:background="#03A9F4"
        android:fontFamily="@font/edosz"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textOff="@string/SoundOn"
        android:textOn="@string/SoundOff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243"
        tools:ignore="TextContrastCheck" />

    <ToggleButton
        android:id="@+id/toggleButton3"
        android:layout_width="187dp"
        android:layout_height="77dp"
        android:background="#03A9F4"
        android:fontFamily="@font/edosz"
        android:text="ToggleButton"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textOff="@string/DarkModeOff"
        android:textOn="@string/DarkModeOn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton"
        app:layout_constraintVertical_bias="0.113" />

    <ImageButton
        android:id="@+id/backButtonSettingsP"
        android:layout_width="125dp"
        android:layout_height="71dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/testbackbuttoniconsettings"
        tools:ignore="SpeakableTextPresentCheck" />



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColord"
    tools:context=".LevelEditor">


    <ImageButton
        android:id="@+id/SECONDPAGEBACKBUTTON"
        android:layout_width="106dp"
        android:layout_height="41dp"
        android:adjustViewBounds="true"
        android:padding="0px"
        android:scaleType="fitXY"
        android:shadowColor="#000000"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/tbackbutton" />

    <ImageButton
        android:id="@+id/option3x3"
        android:layout_width="152dp"
        android:layout_height="153dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.286"
        app:srcCompat="@drawable/final_3x3_grid" />

    <ImageButton
        android:id="@+id/option5x5"
        android:layout_width="152dp"
        android:layout_height="153dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.816"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.286"
        app:srcCompat="@drawable/final_5x5_grid" />

    <ImageButton
        android:id="@+id/option7x7"
        android:layout_width="152dp"
        android:layout_height="153dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514"
        app:srcCompat="@drawable/final_7x7_grid" />


    <ImageButton
        android:id="@+id/option9x9"
        android:layout_width="152dp"
        android:layout_height="153dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.816"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514"
        app:srcCompat="@drawable/final_9x9_grid" />


    <ImageButton
        android:id="@+id/optioncustom"
        android:layout_width="152dp"
        android:layout_height="153dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.739"
        app:srcCompat="@drawable/final_custom_grid" />

    <ImageButton
        android:id="@+id/optionrandom"
        android:layout_width="152dp"
        android:layout_height="153dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.816"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.739"
        app:srcCompat="@drawable/final_random_grid" />


    <EditText
        android:id="@+id/test_user_input"
        android:layout_width="71dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/optioncustom"
        app:layout_constraintEnd_toEndOf="@+id/optioncustom"
        app:layout_constraintStart_toStartOf="@+id/optioncustom"
        app:layout_constraintTop_toTopOf="@+id/optionrandom"
        app:layout_constraintVertical_bias="0.733" />

    <TextView
        android:id="@+id/select_your_grid"
        android:layout_width="341sp"
        android:layout_height="78sp"
        android:adjustViewBounds="true"
        android:fontFamily="@font/edosz"
        android:gravity="center_horizontal"
        android:scaleType="fitXY"
        android:shadowColor="#000000"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="6"
        android:text="@string/selectyourgrid"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109"
        app:srcCompat="@drawable/random_grid_selection" />

    <TextView
        android:id="@+id/custom_option"
        android:layout_width="74dp"
        android:layout_height="27dp"
        android:fontFamily="@font/edosz"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="6"
        android:shadowRadius="6"
        android:text="CUSTOM"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/optioncustom"
        app:layout_constraintEnd_toEndOf="@+id/optioncustom"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/optioncustom"
        app:layout_constraintTop_toTopOf="@+id/optioncustom"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="81dp"
        android:layout_height="26dp"
        android:fontFamily="@font/edosz"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="6"
        android:shadowRadius="6"
        android:text="RANDOM"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/optionrandom"
        app:layout_constraintEnd_toEndOf="@+id/optionrandom"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/optionrandom"
        app:layout_constraintTop_toTopOf="@+id/optionrandom"
        app:layout_constraintVertical_bias="0.157" />

    <ImageButton
        android:id="@+id/begin_button"
        android:layout_width="352dp"
        android:layout_height="141dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.972"
        app:srcCompat="@drawable/final_begin_button" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="189dp"
        android:layout_height="62dp"
        android:fontFamily="@font/edosz"
        android:text="@string/begin"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="38dp"
        app:layout_constraintBottom_toBottomOf="@+id/begin_button"
        app:layout_constraintEnd_toEndOf="@+id/begin_button"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="@+id/begin_button"
        app:layout_constraintTop_toTopOf="@+id/begin_button"
        app:layout_constraintVertical_bias="0.505"
        android:gravity="center_horizontal" />


</androidx.constraintlayout.widget.ConstraintLayout>